{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "cluster": {
            "description": "Basic cluster information",
            "type": [
                "object"
            ]
        },
        "clusterAnnotations": {
            "description": "Annotations to apply to the cluster",
            "type": [
                "object"
            ],
            "additionalProperties": true
        },
        "clusterIdentity": {
            "description": "The KubeVirt Service Account credentials secret reference, auto-populated",
            "type": [
                "object"
            ],
            "properties": {
                "name": {
                    "description": "The KubeVirt Service Account credentials secret name, auto-populated",
                    "type": [
                        "string"
                    ]
                }
            }
        },
        "clusterLabels": {
            "description": "Labels to apply to the cluster",
            "type": [
                "object"
            ],
            "additionalProperties": true
        },
        "clusterNetwork": {
            "description": "The cluster network configuration",
            "type": [
                "object"
            ],
            "properties": {
                "pods": {
                    "description": "The network ranges from which Pod networks are allocated",
                    "type": [
                        "object"
                    ],
                    "properties": {
                        "cidrBlocks": {
                            "description": "A list of CIDR blocks",
                            "type": [
                                "array"
                            ],
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "services": {
                    "description": "The network ranges from which service VIPs are allocated",
                    "type": [
                        "object"
                    ],
                    "properties": {
                        "cidrBlocks": {
                            "description": "A list of CIDR blocks",
                            "type": [
                                "array"
                            ],
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "controlPlane": {
            "description": "Control plane parameters",
            "type": [
                "object"
            ],
            "properties": {
                "additionalNetworkInterfaces": {
                    "type": "array"
                },
                "bootstrapCheckStrategy": {
                    "description": "Strategy for bootstrap checks",
                    "type": [
                        "string"
                    ],
                    "enum": [
                        "none",
                        "ssh"
                    ]
                },
                "cloudInit": {
                    "description": "Cloud-init configuration",
                    "type": [
                        "object"
                    ],
                    "properties": {
                        "userData": {
                            "description": "Cloud-init user data",
                            "type": [
                                "string"
                            ]
                        }
                    }
                },
                "cpus": {
                    "description": "Number of CPUs allocated to control plane nodes",
                    "type": [
                        "integer"
                    ],
                    "minimum": 1
                },
                "dataVolumes": {
                    "type": "array"
                },
                "defaultNetworkInterface": {
                    "description": "Default network interface configuration",
                    "type": [
                        "object"
                    ],
                    "properties": {
                        "type": {
                            "description": "Interface type (bridge, masquerade, sriov)",
                            "type": [
                                "string"
                            ],
                            "enum": [
                                "bridge",
                                "masquerade",
                                "sriov"
                            ]
                        }
                    }
                },
                "files": {
                    "type": "array"
                },
                "image": {
                    "description": "Container disk image for control plane nodes",
                    "type": [
                        "string"
                    ]
                },
                "memory": {
                    "description": "Memory allocated to control plane nodes",
                    "type": [
                        "string"
                    ]
                },
                "networkInterfaceMultiqueue": {
                    "description": "Enable network interface multiqueue",
                    "type": [
                        "boolean"
                    ]
                },
                "nodeSelector": {
                    "description": "Node selector for VM placement",
                    "type": [
                        "object"
                    ],
                    "additionalProperties": true
                },
                "preStartCommands": {
                    "description": "Commands to run before starting K0s service",
                    "type": [
                        "array"
                    ],
                    "items": {
                        "type": "string"
                    }
                },
                "runStrategy": {
                    "description": "VM run strategy (Always, Once, Manual, Halted)",
                    "type": [
                        "string"
                    ],
                    "enum": [
                        "Always",
                        "Once",
                        "Manual",
                        "Halted"
                    ]
                }
            }
        },
        "controlPlaneNumber": {
            "description": "The number of the control plane nodes",
            "type": [
                "number"
            ],
            "minimum": 1
        },
        "infraStorageClassName": {
            "description": "Infrastructure storage class name for CSI driver",
            "type": [
                "string"
            ]
        },
        "k0s": {
            "description": "K0s parameters",
            "type": [
                "object"
            ],
            "properties": {
                "api": {
                    "description": "Kubernetes API server parameters",
                    "type": [
                        "object"
                    ],
                    "properties": {
                        "extraArgs": {
                            "description": "Map of key-values (strings) for any extra arguments to pass down to Kubernetes api-server process",
                            "type": [
                                "object"
                            ],
                            "additionalProperties": true
                        }
                    },
                    "additionalProperties": true
                },
                "cloudProvider": {
                    "description": "Cloud provider configuration",
                    "type": [
                        "object"
                    ],
                    "properties": {
                        "enabled": {
                            "description": "Enable cloud provider support",
                            "type": [
                                "boolean"
                            ]
                        }
                    }
                },
                "downloadURL": {
                    "description": "Custom download URL for K0s binary. If empty, uses default K0s release URL",
                    "type": [
                        "string"
                    ]
                },
                "helmCharts": {
                    "description": "Helm chart deployment configurations",
                    "type": [
                        "object"
                    ],
                    "properties": {
                        "kubernetesCSIExternalSnapshotter": {
                            "description": "Kubernetes CSI external snapshotter configuration",
                            "type": [
                                "object"
                            ],
                            "properties": {
                                "enabled": {
                                    "description": "Enable kubernetes-csi-external-snapshotter helm chart in k0s",
                                    "type": [
                                        "boolean"
                                    ]
                                },
                                "image": {
                                    "description": "Image configuration for snapshot-controller",
                                    "type": [
                                        "object"
                                    ],
                                    "properties": {
                                        "repository": {
                                            "description": "Image repository for snapshot-controller, if empty uses global registry with sig-storage/snapshot-controller",
                                            "type": [
                                                "string"
                                            ]
                                        }
                                    }
                                },
                                "name": {
                                    "description": "Chart name",
                                    "type": [
                                        "string"
                                    ]
                                },
                                "repo": {
                                    "description": "Chart repository",
                                    "type": [
                                        "string"
                                    ]
                                },
                                "version": {
                                    "description": "Chart version for kubernetes-csi-external-snapshotter",
                                    "type": [
                                        "string"
                                    ]
                                }
                            }
                        },
                        "kubevirtCSIDriverTenant": {
                            "description": "KubeVirt CSI driver tenant configuration",
                            "type": [
                                "object"
                            ],
                            "properties": {
                                "enabled": {
                                    "description": "Enable kubevirt-csi-driver-tenant helm chart in k0s",
                                    "type": [
                                        "boolean"
                                    ]
                                },
                                "images": {
                                    "description": "Image configurations for CSI driver components",
                                    "type": [
                                        "object"
                                    ],
                                    "properties": {
                                        "csiDriver": {
                                            "description": "CSI driver image configuration",
                                            "type": [
                                                "object"
                                            ],
                                            "properties": {
                                                "repo": {
                                                    "description": "Image repository for CSI driver, if empty uses global registry with kubevirt",
                                                    "type": [
                                                        "string"
                                                    ]
                                                }
                                            }
                                        },
                                        "csiLivenessProbe": {
                                            "description": "CSI liveness probe image configuration",
                                            "type": [
                                                "object"
                                            ],
                                            "properties": {
                                                "repo": {
                                                    "description": "Image repository for CSI liveness probe, if empty uses global registry with sig-storage",
                                                    "type": [
                                                        "string"
                                                    ]
                                                }
                                            }
                                        },
                                        "csiNodeDriverRegistrar": {
                                            "description": "CSI node driver registrar image configuration",
                                            "type": [
                                                "object"
                                            ],
                                            "properties": {
                                                "repo": {
                                                    "description": "Image repository for CSI node driver registrar, if empty uses global registry with sig-storage",
                                                    "type": [
                                                        "string"
                                                    ]
                                                }
                                            }
                                        }
                                    }
                                },
                                "name": {
                                    "description": "Chart name",
                                    "type": [
                                        "string"
                                    ]
                                },
                                "repo": {
                                    "description": "Chart repository",
                                    "type": [
                                        "string"
                                    ]
                                },
                                "version": {
                                    "description": "Chart version for kubevirt-csi-driver-tenant",
                                    "type": [
                                        "string"
                                    ]
                                }
                            }
                        },
                        "kubevirtCloudControllerManager": {
                            "description": "KubeVirt cloud controller manager configuration",
                            "type": [
                                "object"
                            ],
                            "properties": {
                                "enabled": {
                                    "description": "Enable kubevirt-cloud-controller-manager helm chart in k0s",
                                    "type": [
                                        "boolean"
                                    ]
                                },
                                "name": {
                                    "description": "Chart name",
                                    "type": [
                                        "string"
                                    ]
                                },
                                "replicas": {
                                    "description": "Number of replicas for cloud controller manager",
                                    "type": [
                                        "integer"
                                    ],
                                    "minimum": 1
                                },
                                "repo": {
                                    "description": "Chart repository",
                                    "type": [
                                        "string"
                                    ]
                                },
                                "tag": {
                                    "description": "Image tag for kubevirt-cloud-controller-manager, if empty uses chart default",
                                    "type": [
                                        "string"
                                    ]
                                },
                                "topologySpreadConstraints": {
                                    "description": "Topology spread constraints for cloud controller manager",
                                    "type": [
                                        "array"
                                    ],
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "labelSelector": {
                                                "type": "object",
                                                "properties": {
                                                    "matchLabels": {
                                                        "type": "object",
                                                        "properties": {
                                                            "k8s-app": {
                                                                "type": "string"
                                                            }
                                                        }
                                                    }
                                                }
                                            },
                                            "matchLabelKeys": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                }
                                            },
                                            "maxSkew": {
                                                "type": "integer"
                                            },
                                            "topologyKey": {
                                                "type": "string"
                                            },
                                            "whenUnsatisfiable": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                },
                                "version": {
                                    "description": "Chart version for kubevirt-cloud-controller-manager",
                                    "type": [
                                        "string"
                                    ]
                                }
                            }
                        }
                    }
                },
                "network": {
                    "description": "Network configuration for K0s",
                    "type": [
                        "object"
                    ],
                    "properties": {
                        "vxlanPort": {
                            "description": "Port to use for VXLAN tunnels",
                            "type": [
                                "number"
                            ],
                            "maximum": 65535,
                            "minimum": 1
                        }
                    }
                },
                "version": {
                    "description": "K0s version",
                    "type": [
                        "string"
                    ]
                }
            }
        },
        "machineHealthCheck": {
            "description": "Machine health check configuration",
            "type": [
                "object"
            ],
            "properties": {
                "enabled": {
                    "description": "Enable machine health checks",
                    "type": [
                        "boolean"
                    ]
                },
                "maxUnhealthy": {
                    "description": "Maximum unhealthy machines threshold",
                    "type": [
                        "string"
                    ]
                }
            }
        },
        "objects": {
            "description": "List of generic Kubernetes objects to create",
            "type": [
                "array"
            ]
        },
        "worker": {
            "description": "Worker parameters",
            "type": [
                "object"
            ],
            "properties": {
                "additionalNetworkInterfaces": {
                    "type": "array"
                },
                "annotations": {
                    "description": "Annotations to apply to VirtualMachine and template",
                    "type": [
                        "object"
                    ],
                    "additionalProperties": true
                },
                "bootstrapCheckStrategy": {
                    "description": "Strategy for bootstrap checks",
                    "type": [
                        "string"
                    ],
                    "enum": [
                        "none",
                        "ssh"
                    ]
                },
                "cloudInit": {
                    "description": "Cloud-init configuration",
                    "type": [
                        "object"
                    ],
                    "properties": {
                        "userData": {
                            "description": "Cloud-init user data",
                            "type": [
                                "string"
                            ]
                        }
                    }
                },
                "cpu": {
                    "description": "CPU configuration",
                    "type": [
                        "object"
                    ],
                    "properties": {
                        "dedicatedCpuPlacement": {
                            "description": "Enable dedicated CPU placement",
                            "type": [
                                "boolean"
                            ]
                        },
                        "isolateEmulatorThread": {
                            "description": "Isolate emulator thread",
                            "type": [
                                "boolean"
                            ]
                        },
                        "model": {
                            "description": "CPU model (e.g., host-passthrough)",
                            "type": [
                                "string"
                            ]
                        },
                        "numa": {
                            "description": "NUMA configuration",
                            "type": [
                                "object"
                            ],
                            "additionalProperties": true
                        }
                    }
                },
                "cpus": {
                    "description": "Number of CPUs allocated to worker nodes",
                    "type": [
                        "integer"
                    ],
                    "minimum": 1
                },
                "dataVolumes": {
                    "type": "array"
                },
                "defaultNetworkInterface": {
                    "description": "Default network interface configuration",
                    "type": [
                        "object"
                    ],
                    "properties": {
                        "type": {
                            "description": "Interface type (bridge, masquerade, sriov)",
                            "type": [
                                "string"
                            ],
                            "enum": [
                                "bridge",
                                "masquerade",
                                "sriov"
                            ]
                        }
                    }
                },
                "devices": {
                    "description": "Device configuration",
                    "type": [
                        "object"
                    ],
                    "properties": {
                        "autoattachGraphicsDevice": {
                            "description": "Auto-attach graphics device",
                            "type": [
                                "boolean"
                            ]
                        },
                        "autoattachMemBalloon": {
                            "description": "Auto-attach memory balloon",
                            "type": [
                                "boolean"
                            ]
                        },
                        "autoattachSerialConsole": {
                            "description": "Auto-attach serial console",
                            "type": [
                                "boolean"
                            ]
                        },
                        "hostDevices": {
                            "description": "Host devices to attach",
                            "type": [
                                "array"
                            ]
                        }
                    }
                },
                "files": {
                    "type": "array"
                },
                "image": {
                    "description": "Container disk image for worker nodes",
                    "type": [
                        "string"
                    ]
                },
                "imagePullPolicy": {
                    "description": "Image pull policy for container disk",
                    "type": [
                        "string"
                    ],
                    "enum": [
                        "Always",
                        "IfNotPresent",
                        "Never"
                    ]
                },
                "memory": {
                    "description": "Memory allocated to worker nodes",
                    "type": [
                        "string"
                    ]
                },
                "memoryConfig": {
                    "description": "Advanced memory configuration",
                    "type": [
                        "object"
                    ],
                    "properties": {
                        "guest": {
                            "description": "Guest memory (e.g., 512Gi)",
                            "type": [
                                "string"
                            ]
                        },
                        "hugepages": {
                            "description": "Hugepages configuration",
                            "type": [
                                "object"
                            ],
                            "additionalProperties": true
                        },
                        "limits": {
                            "description": "Memory limits (e.g., 528Gi)",
                            "type": [
                                "string"
                            ]
                        },
                        "requests": {
                            "description": "Memory requests (e.g., 528Gi)",
                            "type": [
                                "string"
                            ]
                        }
                    }
                },
                "networkInterfaceMultiqueue": {
                    "description": "Enable network interface multiqueue",
                    "type": [
                        "boolean"
                    ]
                },
                "nodeSelector": {
                    "description": "Node selector for VM placement",
                    "type": [
                        "object"
                    ],
                    "additionalProperties": true
                },
                "preStartCommands": {
                    "description": "Commands to run before starting K0s service",
                    "type": [
                        "array"
                    ],
                    "items": {
                        "type": "string"
                    }
                },
                "runStrategy": {
                    "description": "VM run strategy (Always, Once, Manual, Halted)",
                    "type": [
                        "string"
                    ],
                    "enum": [
                        "Always",
                        "Once",
                        "Manual",
                        "Halted"
                    ]
                }
            }
        },
        "workersNumber": {
            "description": "The number of the worker nodes",
            "type": [
                "number"
            ],
            "minimum": 1
        }
    }
}
