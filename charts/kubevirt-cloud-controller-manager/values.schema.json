{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "cloudConfig": {
            "type": "object",
            "properties": {
                "kubeconfig": {
                    "type": "string"
                },
                "loadBalancer": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                }
            }
        },
        "cloudControllerManager": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "replicas": {
                    "type": "integer"
                },
                "repo": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                },
                "topologySpreadConstraints": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "labelSelector": {
                                "type": "object",
                                "properties": {
                                    "matchLabels": {
                                        "type": "object",
                                        "properties": {
                                            "k8s-app": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            },
                            "matchLabelKeys": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "maxSkew": {
                                "type": "integer"
                            },
                            "topologyKey": {
                                "type": "string"
                            },
                            "whenUnsatisfiable": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}
