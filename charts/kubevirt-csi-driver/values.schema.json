{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "cluster": {
            "description": "Basic cluster information",
            "type": [
                "object"
            ]
        },
        "kubevirtCsiDriver": {
            "type": "object",
            "properties": {
                "csiAttacher": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "repo": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "csiDriver": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "repo": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "csiLivenessProbe": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "repo": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "csiProvisioner": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "repo": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "csiResizer": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "repo": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "csiSnapshotter": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "repo": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "infraStorageClassName": {
                    "description": "Infrastructure storage class name",
                    "type": [
                        "string"
                    ]
                },
                "nodeSelector": {
                    "type": "object",
                    "properties": {
                        "node-role.kubernetes.io/control-plane": {
                            "type": "string"
                        }
                    }
                },
                "replicas": {
                    "type": "integer"
                },
                "topologySpreadConstraints": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "labelSelector": {
                                "type": "object",
                                "properties": {
                                    "matchLabels": {
                                        "type": "object",
                                        "properties": {
                                            "k8s-app": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            },
                            "matchLabelKeys": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "maxSkew": {
                                "type": "integer"
                            },
                            "topologyKey": {
                                "type": "string"
                            },
                            "whenUnsatisfiable": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}
