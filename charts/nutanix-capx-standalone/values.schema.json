{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "Nutanix CAPX Standalone Configuration Schema",
  "properties": {
    "capx": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        }
      }
    },
    "providerTemplate": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "nutanix": {
      "type": "object",
      "properties": {
        "prismCentral": {
          "type": "object",
          "properties": {
            "address": {
              "type": "string"
            },
            "port": {
              "type": "number",
              "minimum": 1,
              "maximum": 65535
            },
            "insecure": {
              "type": "boolean"
            },
            "usePerClusterCredential": {
              "type": "boolean"
            },
            "credentialSecretName": {
              "type": "string"
            },
            "additionalTrustBundleConfigMapName": {
              "type": "string"
            }
          }
        },
        "controlPlaneEndpoint": {
          "type": "object",
          "properties": {
            "host": {
              "type": "string"
            },
            "port": {
              "type": "number",
              "minimum": 1,
              "maximum": 65535
            }
          }
        }
      }
    },
    "machineDefaults": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["name", "uuid"]
            },
            "name": {
              "type": "string"
            },
            "uuid": {
              "type": "string"
            }
          }
        },
        "cluster": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["name", "uuid"]
            },
            "name": {
              "type": "string"
            },
            "uuid": {
              "type": "string"
            }
          }
        },
        "subnets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["name", "uuid"]
              },
              "name": {
                "type": "string"
              },
              "uuid": {
                "type": "string"
              }
            }
          }
        },
        "bootType": {
          "type": "string",
          "enum": ["legacy", "uefi"]
        },
        "vcpusPerSocket": {
          "type": "number",
          "minimum": 1
        },
        "vcpuSockets": {
          "type": "number",
          "minimum": 1
        },
        "memorySize": {
          "type": "string"
        },
        "systemDiskSize": {
          "type": "string"
        },
        "project": {
          "type": ["string", "null"]
        },
        "additionalCategories": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "controlPlane": {
      "type": "object",
      "properties": {
        "vcpuSockets": {
          "type": "number",
          "minimum": 1
        },
        "memorySize": {
          "type": "string"
        },
        "systemDiskSize": {
          "type": "string"
        }
      }
    },
    "worker": {
      "type": "object",
      "properties": {
        "vcpuSockets": {
          "type": "number",
          "minimum": 1
        },
        "memorySize": {
          "type": "string"
        },
        "systemDiskSize": {
          "type": "string"
        }
      }
    },
    "k0s": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "controlPlane": {
          "type": "object",
          "properties": {
            "replicas": {
              "type": "number",
              "minimum": 1
            },
            "args": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "calico": {
          "type": "object",
          "properties": {
            "mode": {
              "type": "string",
              "enum": ["", "ipip", "vxlan", "bgp"]
            },
            "mtu": {
              "type": ["number", "null"]
            },
            "ipPools": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "cidr": {
                    "type": "string"
                  },
                  "encapsulation": {
                    "type": "string"
                  },
                  "natOutgoing": {
                    "type": "string"
                  },
                  "nodeSelector": {
                    "type": "string"
                  }
                },
                "required": ["cidr"]
              }
            },
            "typha": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                }
              }
            }
          }
        },
        "worker": {
          "type": "object",
          "properties": {
            "labels": {
              "type": "object",
              "additionalProperties": true
            },
            "taints": {
              "type": "array"
            }
          }
        }
      }
    },
    "network": {
      "type": "object",
      "properties": {
        "provider": {
          "type": "string",
          "enum": ["calico", "kube-router", "custom"]
        },
        "podCIDR": {
          "type": "string"
        },
        "serviceCIDR": {
          "type": "string"
        }
      }
    },
    "clusterNetwork": {
      "type": "object",
      "properties": {
        "pods": {
          "type": "object",
          "properties": {
            "cidrBlocks": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "services": {
          "type": "object",
          "properties": {
            "cidrBlocks": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "class": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },
    "clusterLabels": {
      "type": "object",
      "additionalProperties": true
    },
    "clusterAnnotations": {
      "type": "object",
      "additionalProperties": true
    },
    "machineHealthCheck": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "maxUnhealthy": {
          "type": "string"
        }
      }
    },
    "objects": {
      "type": "array",
      "items": {
        "type": "object"
      }
    }
  }
}
